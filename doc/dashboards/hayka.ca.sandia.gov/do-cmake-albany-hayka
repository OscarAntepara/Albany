
rm -rf CMake*

TRILINOS_INSTALL=/home/ikalash/Trilinos/build/install
PWD=`pwd`

cmake \
    -GNinja \
    -D ALBANY_TRILINOS_DIR:PATH=${TRILINOS_INSTALL} \
    -D CMAKE_C_COMPILER=${OPENMPI_BIN}/mpicc \
    -D CMAKE_CXX_COMPILER=${OPENMPI_BIN}/mpicxx \
    -D ENABLE_LANDICE:BOOL=ON \
    -D ENABLE_UNIT_TESTS:BOOL=ON \
    -D ENABLE_DEMO_PDES:BOOL=OFF \
    -D ENABLE_CHECK_FPE:BOOL=OFF \
    -D ENABLE_MPAS_INTERFACE:BOOL=OFF \
    -D ENABLE_CISM_INTERFACE:BOOL=OFF \
    -D SEACAS_EPU=${TRILINOS_INSTALL}/bin/epu \
    -D SEACAS_DECOMP=${TRILINOS_INSTALL}/bin/decomp \
    -D SEACAS_EXODIFF=${TRILINOS_INSTALL}/bin/exodiff \
    -D SEACAS_ALGEBRA=${TRILINOS_INSTALL}/bin/algebra \
../
